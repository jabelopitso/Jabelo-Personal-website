{
  "name": "jabelo-personal-website",
  "version": "1.0.0",
  "description": "Advanced personal portfolio website with modern web technologies",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:build && npm run server:build",
    "start": "node dist/server/index.js",
    "server:dev": "nodemon server/index.js",
    "server:build": "tsc -p server/tsconfig.json",
    "client:dev": "vite",
    "client:build": "vite build",
    "client:preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "format": "prettier --write .",
    "analyze": "npm run build && npx webpack-bundle-analyzer dist/assets"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/bcryptjs": "^2.4.5",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/multer": "^1.4.9",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "@vitejs/plugin-legacy": "^4.1.1",
    "vitest": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "eslint": "^8.51.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "prettier": "^3.0.3",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "cssnano": "^6.0.1"
  },
  "keywords": ["portfolio", "personal-website", "typescript", "express", "sqlite"],
  "author": "Jabelo Pitso",
  "license": "MIT"
}